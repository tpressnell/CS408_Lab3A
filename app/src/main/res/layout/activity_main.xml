        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/guideSouth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
